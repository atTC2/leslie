<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<launch>  
  <node name="amcl" pkg="amcl" type="amcl">
    <!-- setting odometer noise -->
    <param name="odom_model_type"           value="diff"/>
    <param name="odom_alpha1"               value="0.11"/>
    <param name="odom_alpha2"               value="0.1"/>
    <param name="odom_alpha3"               value="0.056"/>
    <!-- setting laser scan -->
    <param name="laser_model_type"          value="likelihood_field"/>
    <param name="laser_max_beams"             value="512"/>
    <param name="laser_max_range"           value="-1.0"/>
    <!-- setting particles scan -->
    <param name="min_particles"             value="50"/>
    <param name="max_particles"             value="400"/>
    <!-- setting rviz update intervals -->
    <param name="update_min_d"              value="0.25"/>
    <param name="update_min_a"              value="0.2"/>
    <param name="gui_publish_rate"          value="10.0"/>
    <param name="resample_interval"         value="1"/>
    
    <!-- Increase tolerance because the computer can get quite busy -->
    <param name="recovery_alpha_slow"       value="0.001"/>
    <param name="recovery_alpha_fast"       value="0.01"/>
    <!-- set amcl to suscribe to right to -->
    <param name="base_frame_id"             value="/base_link"/> 
    <remap from="scan"                      to="/base_scan"/>
  </node>
</launch>
