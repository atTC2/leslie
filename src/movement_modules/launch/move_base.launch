<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<launch>
  <!-- we need amcl running -->
  <include file="$(env PWD)/launch/amcl.launch"/> 
  
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen"> 
    <rosparam file="$(env PWD)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(env PWD)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(env PWD)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(env PWD)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(env PWD)/param/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
